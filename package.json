{
  "name": "Ghint",
  "version": "1.0.0",
  "description": "ghint ensures that your pull requests follow specified conventions.",
  "author": "Franklin Chieze <chieze.franklin@gmail.com> (https://ghint.herokuapp.com)",
  "license": "ISC",
  "repository": "https://github.com/ghint-bot.git",
  "homepage": "https://github.com/ghint-bot",
  "bugs": "https://github.com/ghint-bot/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app",
    "ghint",
    "ghint-bot"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "lint": "standard --fix",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "probot": "^7.2.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7"
  },
  "devDependencies": {
    "jest": "^24.0.0",
    "nock": "^10.0.0",
    "nodemon": "^1.17.2",
    "smee-client": "^1.0.2",
    "standard": "^12.0.1"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
